<div class="container">
<div class="container-home">
<header class="course_lister">Courses</header>
<p class="userinfo">
    <% if current_student %>
    <div class="signed-in">
    <p>Signed in as <%= current_student.first_name %></p>
    <div class="log-out">
      <%= link_to "Log out", student_session_path("current"), :method => :delete %>
    </div>
    </div>
  <div class="periods">      
    <div class="row-1 col-md-6">
      <a href="/concepts/1" class="button button-orange"><%= current_student.period_1 %></a>
      <a href="/concepts/2" class="button button-purple"><%= current_student.period_2 %></a>
      <a href="/concepts/3" class="button button-yellow"><%= current_student.period_3 %></a>
    </div>
    <div class="row-2 col-md-6"> 
      <a href="/concepts/4" class="button button-red"><%= current_student.period_4 %></a>
      <a href="/concepts/5" class="button button-blue"><%= current_student.period_5 %></a>
      <a href="/concepts/6" class="button button-pinkish"><%= current_student.afterschool %></a>
    </div>
  </div>
  <!-- <%= puts current_student %> -->
    <% else %>
 <h1>Planr</h1>
<%= form_tag student_sessions_path, :class => "form-inline" do %>
  <div class="input-group student">
    <span class="input-group-btn">
      <button class="btn btn-default" type="button">Student</button>
      </span>
    <%= text_field_tag :email, params[:email], class: "form-control teacher-padding", placeholder: "Username" %>
  </div>

    <div class="input-group teacher-pw">
    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
  <div class="input-group student" style="color: black;">
    <%= password_field_tag :password, params[:password], placeholder: "Password", class: "form-control teacher-padding" %>
  </div>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
<%end %>

